import random

# Listák és stringek meghatározása
szerencsejatekok = ["Ötöslottó", "Hatoslottó", "Skandinávlottó", "Totó"]
szerencsejatekId = ""
nyertes_jatekok = 0
osszes_jatek = 0

# Választó ciklus
while szerencsejatekId != 0:
    print("Az alábbi játékokhoz tudunk tippeket adni:")
    for x, elem in enumerate(szerencsejatekok):
        print(x + 1, ":", elem)
    print("0 : Kilépés")
    
    # Választás
    szerencsejatekId = int(input("Válassz játékot: "))
    print("*" * 80)

    # Játékok:
    if szerencsejatekId == 1:  # Ötöslottó
        tippek = []
        while len(tippek) < 5:
            x = int(input("Adj meg egy számot 1 és 90 között: "))
            if 1 <= x <= 90 and x not in tippek:
                tippek.append(x)
            else:
                print("Érvénytelen szám vagy ismételt szám.")
        nyero_szamok = [random.randint(1, 90) for _ in range(5)]
        print("Nyerőszámok:", nyero_szamok)

        talalatok = len(set(tippek).intersection(nyero_szamok))
        if talalatok == 5:
            print("Gratulálok, mind az 5 találatot elérte!")
            nyertes_jatekok += 1
        else:
            print("Találatok száma:", talalatok)

        osszes_jatek += 1
        print("*" * 80)

# Itt folytathatod a többi játékhoz hasonló logikát
# ...

# lezárás
elif szerencsejatekId == 0:
    break

print("Összesen elérte a(z) {}% nyertes játékot.".format((nyertes_jatekok / osszes_jatek) * 100))
